<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/upload_image_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/settings_container"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/upload_image_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/add_square_svgrepo_com"
        android:contentDescription="Upload Image Icon"
        android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/upload_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Upload Image"
            android:textSize="14sp"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:id="@+id/name_of_event_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_image_container"
        android:layout_marginTop="8dp"
        android:text="Name of Event"
        android:textSize="14sp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/name_of_event_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_event_label"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_edittext"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_of_event_input"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/black"
        android:text="Address"
        android:textSize="14sp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_label"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_input"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textSize="14sp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_label"
        android:layout_marginTop="4dp"
        android:textColorHint="@color/black"
        android:background="@drawable/round_edittext"
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <Button
        android:id="@+id/add_post_button"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="159dp"
        android:background="@drawable/add_square_svgrepo_com"
        android:backgroundTint="@color/primary"
         />
</RelativeLayout>
