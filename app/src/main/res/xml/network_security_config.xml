<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic for localhost (used for local development) -->
        <domain includeSubdomains="true">localhost</domain>
<!--        <domain includeSubdomains="true">127.0.0.1</domain>-->
        <!-- Allow cleartext traffic for your local network IP -->
        <domain includeSubdomains="true">192.168.1.22</domain> <!-- Replace with your local IP address -->
    </domain-config>
</network-security-config>
